{
    "name": "tourism-el-salvador-app",
    "version": "1.0.0",
    "description": "Tourism El Salvador - Full-stack application with Next.js frontend and NestJS backend",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:api": "npm run start:dev --workspace=apps/api",
        "dev:web": "npm run dev --workspace=apps/web",
        "build:api": "npm run build --workspace=apps/api",
        "build:web": "npm run build --workspace=apps/web",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "db:generate": "npm run db:generate --workspace=apps/api",
        "db:migrate:dev": "npm run db:migrate:dev --workspace=apps/api"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}